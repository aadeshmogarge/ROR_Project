<h2>Subjects List</h2><br>
<%= link_to 'Add subject', new_subject_path %>
<table>
    <tr>
        <th> ID </th>
        <th> Name </th>
        <th> Age </th>
        <th> Email </th>
        <th> Rate Drug </th>
        <th> Actions </th>
        
    </tr>
    <% @subjects.each do |s| %>
        <tr>
            <td><%= s.id %></td>
            <td><%= s.name %></td>
            <td><%= s.age %></td>
            <td><%= s.email %></td>

    <% if s.rating.nil? %>
            <td> <%= link_to image_tag('rating.png', size: "30x30"), subject_feedback_path(s.id), :style => 'background-color:red;' %> </td>
    
            
    <% else %>
            <td style="color:green;"> Rating Captured!</td>
    <% end %>

            <td><%= link_to 'Delete', '/#' %></td>

            

        </tr>
    <% end %>
</table><br>

